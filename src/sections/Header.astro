---
import Navbar from "../components/Navbar.astro"
---

<header class="w-full border-b border-white/10 bg-black/80 backdrop-blur sticky top-0 z-50">
  <div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-3">
    <!-- Logo / Home: sigue siendo el recuadro azul, apunta a #home -->
    <a href="#home" class="flex items-center gap-2">
      <div class="h-8 w-8 rounded-lg bg-linear-to-tr from-cyan-400 via-sky-500 to-blue-600 animate-pulse hover:animate-spin-clockwise" />
      <span class="text-sm font-semibold tracking-wide text-slate-100 uppercase">
        Gonzalo.dev
      </span>
    </a>

    <!-- Navbar reutilizable -->
    <Navbar />
  </div>
</header>
